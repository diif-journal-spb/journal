<UserControl x:Class="EugenePetrenko.NumberEditor.NumberEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300">
  <StackPanel Orientation="Vertical">
    <StackPanel Orientation="Horizontal">
      <Label>Language</Label>
      <TextBlock VerticalAlignment="Center">SSS</TextBlock>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <Label>Pages from</Label>
      <TextBox Width="40"/>
      <Label>To</Label>
      <TextBox Width="40"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <Label>pdf</Label>
      <TextBox Width="auto" VerticalAlignment="Center"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <Label>Title</Label>
      <TextBox AcceptsReturn="True" /> 
    </StackPanel>
    <Grid Background="AntiqueWhite">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Label Grid.Column="0">Abstract</Label>
      <TextBox Grid.Column="1" 
        AcceptsReturn="True" 
               AcceptsTab="True" 
               HorizontalAlignment="Center" />
    </Grid>
  </StackPanel>
</UserControl>
