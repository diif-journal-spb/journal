<Window x:Class="EugenePetrenko.NumberEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:NumberEditor="clr-namespace:EugenePetrenko.NumberEditor"

    Title="MainWindow" Height="500" Width="500">
    <TabControl>
      <TabItem Header="Number">
        <DockPanel>
        <NumberEditor:NumberEditor DockPanel.Dock="Bottom,Left"/>
        </DockPanel>
      </TabItem>
      <TabItem Header="Authors">
        <DockPanel>
          <NumberEditor:AuthorsEditor DockPanel.Dock="Bottom,Left"/>
        </DockPanel>
      </TabItem>
    </TabControl>
</Window>
