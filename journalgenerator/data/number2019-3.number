                <word>aggregated variable</word>
                <word>autonomous system</word>
                <word>characteristic polynomial</word>
                <word>invariant set</word>
                <word>inverted pendulum</word>
                <word>Jacobi matrix</word>
                <word>state of equilibrium</word>
            </keywords>
